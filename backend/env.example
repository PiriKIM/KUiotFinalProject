# 자세요정 백엔드 환경변수 설정

# 데이터베이스 설정
DATABASE_URL=sqlite:///./jaseyojeong.db
# PostgreSQL 사용 시: postgresql://username:password@localhost/jaseyojeong

# JWT 설정
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 파일 업로드 설정
UPLOAD_DIR=./static/uploads
MAX_FILE_SIZE=10485760  # 10MB

# TTS 설정
TTS_ENABLED=True
TTS_LANGUAGE=ko

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 개발 환경 설정
ENVIRONMENT=development 